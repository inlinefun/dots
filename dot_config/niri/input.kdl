input {
    keyboard {
        repeat-rate 25
        repeat-delay 600
        numlock
    }
    touchpad {
        tap
        dwt // disable while typing
        drag true
        natural-scroll
        accel-speed 0.0
        accel-profile "flat"
        scroll-factor 1.0
        scroll-method "two-finger"
    }
    mouse {
        accel-speed 0.0
        accel-profile "flat"
        scroll-factor 1.0
    }
    focus-follows-mouse
    workspace-auto-back-and-forth
}
