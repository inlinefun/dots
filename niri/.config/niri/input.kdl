input {
  keyboard {
    xkb {
      layout "us"
    }
    repeat-rate 20
    repeat-delay 500
    numlock
  }
  touchpad {
    tap
    dwt // disable while typing
    drag true
    natural-scroll
    accel-speed 0.0
    accel-profile "flat"
    scroll-method "two-finger"
  }
  mouse {
    accel-speed 0.0
    accel-profile "flat"
    scroll-method "no-scroll"
  }
  focus-follows-mouse
  workspace-auto-back-and-forth
  mod-key "Super"
  mod-key-nested "Alt"
}
